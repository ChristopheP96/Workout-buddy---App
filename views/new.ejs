<h1>Create a new workout</h1>

<form action="/user/workouts/new" method="post">
    <label for="activity">Activity</label><br>
    <select name="activity" id="activity">
      <option value="Running"><b>Running</b></option>
      <option value="Biking"><b>Biking</b></option>
      <option value="Volleyball"><b>Volleyball</b></option>
      <option value="Football"><b>Football</b></option>
      <option value="Basketball"><b>Basketball</b></option>
      <option value="Tennis"><b>Paddel</b></option>
      <option value="Others"><b>Others</b></option>
    </select>
    <br>
    <label for="meetingpoint">Meeting point</label><br>
    <input type="text" name="meetingpoint" id="meetingpoint">
    <br>
    <label for="date">Date</label><br>
    <input type="date" name="date" id="date">
    <br>
    <label for="timeframe">Time frame</label><br>
    <select name="timeframe" id="timeframe">
      <option value="Running"><b>24pm - 1am</b></option>
      <option value="Biking"><b>1am - 2am</b></option>
      <option value="Volleyball"><b>2am - 3am</b></option>
      <option value="Football"><b>3am - 4am</b></option>
      <option value="Basketball"><b>4am - 5am</b></option>
      <option value="Tennis"><b>5am - 6am</b></option>
      <option value="Others"><b>6am - 7am</b></option>
      <option value="Running"><b>7am - 8am</b></option>
      <option value="Biking"><b>8am - 9am</b></option>
      <option value="Volleyball"><b>9am - 10am</b></option>
      <option value="Football"><b>10am - 11am</b></option>
      <option value="Basketball"><b>11am - 12am</b></option>
      <option value="Running"><b>12pm - 1pm</b></option>
      <option value="Biking"><b>13pm - 14pm</b></option>
      <option value="Volleyball"><b>14pm - 15pm</b></option>
      <option value="Football"><b>15pm - 16pm</b></option>
      <option value="Basketball"><b>16pm - 17pm</b></option>
      <option value="Tennis"><b>17pm - 18pm</b></option>
      <option value="Others"><b>18pm - 19m</b></option>
      <option value="Running"><b>19pm - 20pm</b></option>
      <option value="Biking"><b>20pm - 21pm</b></option>
      <option value="Volleyball"><b>21pm - 22pm</b></option>
      <option value="Football"><b>22pm - 23pm</b></option>
      <option value="Basketball"><b>23pm - 24pm</b></option>
    </select>
    <br>
    <label for="comment">Comment</label><br>
    <input type="text" name="comment" id="comment">
    <br>
    <input type="submit" value="create">
  </form>